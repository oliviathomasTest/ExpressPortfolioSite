<%- include("../partials/header") -%>
<%- include("../partials/navbar") -%>

<div class="container" style="margin-top: 100px;margin-bottom: 100px;">
    <h2 class="text-center">Business  Contacts</h2>      
    <table class="table table-hover table-striped table-bordered" style="margin-top: 50px;">
      <thead class="thead-dark">
        <tr>
          <th class="text-center">Contact Name</th>
          <th class="text-center">Contact Number</th>
          <th class="text-center">Contact Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
         <% contactList.forEach(function(contact){%>
        <tr>
          <td class="text-center"><%= contact.name %></td>
          <td class="text-center"><%= contact.number %></td>
          <td class="text-center"><%= contact.email %></td>
          <td class="text-center">
            <!-- Edit Button -->
          <a class="btn btn-primary btn-sm homebtn" href="/business-contacts/edit/<%= contact._id %>"><i class="fas fa-edit"></i> Edit  </a>
            <!-- Delete Button -->
          <a class="btn btn-danger btn-sm homebtn" onclick="return confirm('Are you sure you want to delete this item?');" href="/business-contacts/delete/<%= contact._id %>"><i class="fas fa-trash-alt"></i> Delete  </a>
          </td>
        </tr>
   <% }) %>
      </tbody>
    </table>
  </div>

<%- include("../partials/bottom_nav") -%>
<%- include("../partials/footer") -%>