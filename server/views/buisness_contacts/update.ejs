 <%- include("../partials/navbar") -%>
 <style>
  body {
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: top;
    background-image: url("https://images.unsplash.com/photo-1543094585-3629d00f6f3a?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1951&q=80");
    width: 100%;
    height: 100%;
    font-family: Arial, Helvetica;
