<section id="container" class="footer">
  <h2 class="heading mapheading" id="contact">Get in touch</h2>
  <div class="row">
    <section class="col-md-6 map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2880.3953028602596!2d-79.22859408462897!3d43.78540977911697!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d0f21fd9078f%3A0x46e3fe92c0cd2b18!2sCentennial%20College!5e0!3m2!1sen!2sin!4v1611992173878!5m2!1sen!2sin"
        width="100%"
        height="100%"
        frameborder="0"
        style="border: 0"
        allowfullscreen=""
        aria-hidden="false"
        tabindex="0"
      ></iframe>
    </section>
    <section class="col-md-3">
      <form action="/" method="post">
        <div class="form-group">
          <label for="InputEmail1">First Name</label>
          <input
            name="ifirstname"
            type="text"
            class="form-control"
            id="InputFirstName"
            aria-describedby="nameHelp"
            placeholder=""
            required
          />
        </div>
        <div class="form-group">
          <label for="InputEmail1">Last Name</label>
          <input
            name="ilastname"
            type="text"
            class="form-control"
            id="InputLastName"
            aria-describedby="nameHelp"
            placeholder=""
            required
          />
        </div>
        <div class="form-group">
          <label for="InputEmail">Email</label>
          <input
            name="iemail"
            type="email"
            class="form-control"
            id="InputEmail"
            aria-describedby="emailHelp"
            placeholder=""
          />
        </div>
        <div class="form-group">
          <label for="FormControlTextarea">Message</label>
          <textarea
            name="imessage"
            class="form-control"
            id="FormControlTextarea"
            rows="3"
            placeholder=""
          ></textarea>
        </div>
        <button type="submit" class="submitbtn btn btn-primary btn-block">
          Submit
        </button>
      </form>
    </section>

    <section class="col-md-3 social-footer">
      <ul class="social">
        <li style="font-size: 1.5rem; font-weight: bold">Socials</li>

